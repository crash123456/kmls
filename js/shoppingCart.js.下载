function closeLayer(objClass,targetClass,flag){
	$("."+objClass).parents("."+targetClass).hide();
	$("#spm").hide();
	//点击关闭，设置订单为非送礼订单
	if(flag=='true'){
		isGiftOrder = 0;
		productNo="";
		$("#songli").attr("checked",false);
		$.getJSON('/json/giftHelper_setIsGiftOrder.shtml?m=' + Math.random(),{"isGiftOrder":isGiftOrder},function(data) {});
	}
	
}




